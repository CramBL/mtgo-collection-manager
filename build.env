# Environment variables for building MTGO Collection Manager
RUST_MIN_VERSION = 1.70.0
GO_MIN_VERSION = 1.21
CMAKE_MIN_VERSION = 3.20
GCC_MIN_VERSION = 13.1.0
LLVM_MIN_VERSION = 15.0.3

# Default build mode
BUILD_MODE = Debug

# Default flags for building MTGO Parser
MTGOPARSER_GENERATOR = "Ninja Multi-Config"
MTGOPARSER_BUILD_MODE = Release
MTGOPARSER_ENABLE_COV = false
# User-specified linker is only enabled for Linux
MTGOPARSER_LINKER = mold
MTGOPARSER_PACKAGING_MAINTAINER_MODE = OFF
MTGOPARSER_BUILD_TESTS = ON
MTGOPARSER_DEPLOYING_BINARY = OFF
